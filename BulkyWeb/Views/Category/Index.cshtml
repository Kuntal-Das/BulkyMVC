@model List<Category>
@{
    ViewData["Title"] = "Categories Page";
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th class="text-center">Display Order</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
            {
                <tr>
                    <td>@category.Name</td>
                    <td class="text-center">@category.DisplayOrder</td>
                    <td class="row">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="link-body-emphasis col-6 text-center">
                            <i class="bi bi-pencil-square" style="color:royalblue;"></i>
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" class="link-body-emphasis col-6 text-center">
                            <i class="bi bi-trash-fill" style="color:crimson;"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
