@model List<Bulky.Models.Product>
@{
    ViewData["Title"] = "Products Page";
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create New Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Title</th>
                <th class="text">Author</th>
                <th class="text-center">Listed Price</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.OrderBy(c => c.Title))
            {
                <tr>
                    <td>@product.Title</td>
                    <td class="text">@product.Author</td>
                    <td class="text-center">@product.ListedPrice.ToString("F")</td>
                    <td class="row">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="link-body-emphasis col-6 text-center">
                            <i class="bi bi-pencil-square" style="color:royalblue;"></i>
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="link-body-emphasis col-6 text-center">
                            <i class="bi bi-trash-fill" style="color:crimson;"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
