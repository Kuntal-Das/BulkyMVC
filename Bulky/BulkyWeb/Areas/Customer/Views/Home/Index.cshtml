@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <a href="#">
                        <div class="card border-0 p-3 shadow boder-top border-5 rounded">
                            <img src="@product.ImageUrl" class="card-img-top rounded"
                                 alt="@product.Title by @product.Author"
                                 loading="lazy" />
                            <div class="card-body">
                                <div class="pl-1 ">
                                    <p class="text-dark text-opacity-75 text-center mb-0">
                                        Listed Price
                                        <span class="text-decoration-line-through">$@product.ListedPrice.ToString("F")</span>
                                    </p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">
                                        Discounted up to $@product.Price100.ToString("F")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }
</div>